    <div class="row">
        <div class="col-12 mt-5">
            <div class="row">


                <div class="col-2">
                    <img src="{{image}}" alt="">

                </div>
                <div class="col-10">
                    <p>{{title}}</p>
                    <p>{{director}}</p>

                    <ul>
                        {{#each stars}}
